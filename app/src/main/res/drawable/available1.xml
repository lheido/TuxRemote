<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:top="10dp"
        android:left="-10dp"
        android:right="10dp"
        android:bottom="-40dp">
        <shape
            android:shape="oval"
            >
            <solid android:color="#AA005500"/>
            <size
                android:height="10dp"
                android:width="10dp"/>
        </shape>
    </item>
    <item
        android:top="-10dp"
        android:left="-20dp"
        android:right="20dp"
        android:bottom="10dp">
        <shape
            android:shape="oval"
            >
            <solid android:color="#FF007700"/>
            <size
                android:height="10dp"
                android:width="10dp"/>
        </shape>
    </item>

    <item
        android:bottom="10dp"
        android:left="10dp"
        android:top="10dp"
        android:right="10dp">
        <shape
            android:shape="oval"
            >
            <solid android:color="@color/green"/>
            <size
                android:height="10dp"
                android:width="10dp"/>
        </shape>
    </item>
</layer-list>